<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_cell"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_more" >

            <FrameLayout
                android:id="@+id/frameLayout_img"
                android:layout_width="130dp"
                android:layout_height="100dp" >

                <ImageView
                    android:id="@+id/imageview_goodpicture"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/imageview_isFreeOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nobooking_list"
                    android:visibility="gone" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/relativelayout_good"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/frameLayout_img" >

                <TextView
                    android:id="@+id/textview_goodname"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/imageview_goodnew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_deal_new"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textview_goodcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@id/textview_goodname"
                    android:lines="2"
                    android:textColor="@color/textgray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textview_goodprice"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@id/textview_goodcontent"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:text="30元"
                   />

                <TextView
                    android:id="@+id/textview_goodoldprice"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/textview_goodcontent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/textview_goodprice"
                    android:gravity="center"
                    android:textColor="@color/textgray"
                    android:textSize="12sp" 
                     android:text="30元"
                    />

                <TextView
                    android:id="@+id/textview_peoplenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="7dp"
                    android:textColor="@color/textgray"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>